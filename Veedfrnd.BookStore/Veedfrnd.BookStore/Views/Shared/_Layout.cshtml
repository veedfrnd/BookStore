<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bookstore App</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
</head>
<body>
    <headr>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <!-- Image and text -->
                <nav class="navbar navbar-light bg-light">
                    <a class="navbar-brand" href="/Home/Index">
                        <img src="~/images/bookstore_logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                        Bootstrap
                    </a>
                </nav>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="#" class="nav-item btn btn-outline-primary">Login</a>
                            <a href="#" class="nav-item btn btn-primary">Register</a>
                        </li>
                    </ul>
                   
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-item nav-link active" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/ContactUs">Contact</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </headr>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="card-footer bg-white">
        <div class=" container text-center text-muted">
            Copyright &copy;Book Store @DateTime.Now.Year
        </div>
    </footer>
</body>
</html>
